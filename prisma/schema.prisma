generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model aluno {
  id            Int    @id @default(autoincrement())
  primeiro_nome String
  segundo_nome  String
  natural       String
  idade         Int
  turmaId       Int
}

model professor {
  id Int @id @default(autoincrement())
  primeiro_nome String
  segundo_nome String
  natural String
  idade Int
  materia String
}


model turma {
  id Int @id @default(autoincrement())
  nome String
  turno String
}